<%= form_for(@display) do |f| %>
  <% if @display.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@display.errors.count, "error") %> prohibited this display from being saved:</h2>

      <ul>
      <% @display.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :stipple_id %><br>
    <%= select :display, :stipple_id, @stipples.collect{|s| [s.name, s.id]} %>
  </div>
  <div class="field">
    <%= f.label :fill_color_id %><br>
    <%= select :display, :fill_color_id, @colors.collect{|c| [c.name, c.id]} %>
  </div>
  <div class="field">
    <%= f.label :border_color_id %><br>
    <%= select :display, :border_color_id, @colors.collect{|c| [c.name, c.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
